<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_favorites"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haffa.topnotchmovies.FavoritesActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/favorites_fragment_container">

        <fragment
            android:name="com.haffa.topnotchmovies.FavoritesFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_fav"
            tools:layout="@layout/fragment_favorites">

        </fragment>
    </FrameLayout>

</LinearLayout>
