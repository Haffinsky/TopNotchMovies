<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/fav_margins"
    android:layout_marginBottom="@dimen/fav_margins"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/fav_image_height"
        android:id="@+id/backdrop_image_view"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/backdrop_image_view"
        android:background="#99000000"
        android:paddingBottom="@dimen/grey_overlay_padding_bottom"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="@dimen/fav_title_text_size"
            android:textColor="#FFFFFF"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/movie_title_view"
            android:paddingTop="@dimen/fav_title_text_view_padding_top"
            android:paddingBottom="@dimen/fav_title_text_view_padding_bottom"
            />
    </LinearLayout>
</RelativeLayout>