<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cast_row_layout_height"
    android:layout_marginTop="@dimen/cast_row_margin"
    android:background="@color/backgroundDark"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/actor_profile_view"
        android:layout_width="@dimen/cast_row_image_dimensions"
        android:layout_height="@dimen/cast_row_image_dimensions"
        android:layout_marginTop="@dimen/cast_image_margin_top"
        app:civ_border_color="@color/backgroundLight"
        app:civ_border_width="@dimen/cast_image_border_width" />

    <TextView
        android:id="@+id/actor_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="@dimen/cast_text_size" />
</LinearLayout>