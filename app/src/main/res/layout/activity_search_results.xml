<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.haffa.topnotchmovies.SearchResultsActivity">

    <FrameLayout
        android:id="@+id/grid_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fragment_welcome_menu"
            android:name="com.haffa.topnotchmovies.SearchResultsListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_search_results_list">

        </fragment>
    </FrameLayout>
</LinearLayout>
